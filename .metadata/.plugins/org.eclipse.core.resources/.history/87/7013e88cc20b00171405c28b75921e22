			is.close();
			
			Element words = xmlDoc.getDocumentElement();
			words.normalize();
			
			Element conjunctionsNode = (Element) words.getElementsByTagName("conjunctions").item(0);
			Element normalNode = (Element) conjunctionsNode.getElementsByTagName("normal").item(0);
		    String conjunctionsString = normalNode.getTextContent();
		    String[] words = conjunctionsString.split("\\s+");
		    
		    
			Toast.makeText(this, conjunctionsString, Toast.LENGTH_LONG).show();
			
			
			Element specialConjNode = (Element) conjunctionsNode

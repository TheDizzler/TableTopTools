package fabulousoft.rpgtools.fragments;

import fabulousoft.rpgtools.R;
import android.app.Fragment;
import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.graphics.Rect;
import android.graphics.RectF;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;


public class ProphecyFragment extends Fragment {
	
	
	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
								Bundle savedInstanceState) {
	
		View view;
		view = inflater.inflate(R.layout.fragment_prophecy, container, false);
		
		
		return view;
	}
	
}


class ProphecyView extends View {

		String text = "Test";
		String subText = "Noun";
		Paint textBGColor;
		Paint subTextBGPaint;
		
		
		RectF rectSubText;
		Paint rectSubPaint;
		
		
	public ProphecyView(Context context) {
	
		super(context);
		
		
		subTextBGPaint = new Paint();
		subTextBGPaint.setColor(Color.GREEN);
		subTextBGPaint.setAntiAlias(true);
		subTextBGPaint.setTextSize(16* getResource().getDisplayMetrics().density);
		
		Paint.FontMetrics fm = subTextBGPaint.getFontMetrics();
		float height = fm.descent - fm.ascent;	// height of font text
		rectSubText = new RectF();
		rectSubText.
		
	}
	
	@Override public void onDraw(Canvas canvas) {
		
		canvas.drawRoundRect(rectSubText, rectSubColor)
	}
	
	
}
